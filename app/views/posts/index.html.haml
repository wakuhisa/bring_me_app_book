.search.clearfix
  = form_with(url: posts_searches_path, local: true, method: :get, class: "search_form") do |f|
    = f.text_field :keyword, placeholder: "テキスト検索", class: "search_box"
    = f.submit "検索", class: "search_btn"
.article
  - @posts.zip(@users) do |post, user|
    = link_to post_path(post), "data-turbolinks": false do
      .post
        .post_img
          = image_tag post.img.url, width: "100%", class: "img"
        .post_title
          = post.title.truncate(50)
        .post_text
          = safe_join(post.text.truncate(150).split("\n"), tag(:br))
        .post_user
          = post.user.name
.paginate
  = paginate @posts